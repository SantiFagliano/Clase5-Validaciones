@model List<Mascota>
@{
    ViewData["Title"] = "Litado de Mascotas";

}
<div>
    <div class="p-2">
        <h3 class="d-inline-block border-bottom">Listado de Mascotas dentro del refugio:</h3>
    </div>
    <div class="p-2">
        <a class="nav-link mx-1" asp-area="" asp-controller="Refugio" asp-action="AgregarMascotaEncontrada">Agregar Mascota Encontrada:</a>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Especie</th>
                <th>Estado</th>
                <th>Peso</th>
                <th>Color</th>
                <th>Nombre</th>
                <th>Datos de contacto</th>
                <th>Email de Contacto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Mascota m in Model)
            {
                <tr>
                    <th>@m.Especie.Id</th>
                    <th>@m.Estado</th>
                    <th>@m.Peso</th>
                    <th>@m.Color</th>
                    <th>@m.Nombre</th>
                    <th>@m.DatosDeContacto</th>
                    <th>@m.EmailDeContacto</th>
                </tr>
            }

        </tbody>
    </table>
</div>
